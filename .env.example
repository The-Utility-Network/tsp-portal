# ===============================================
# TSPOM Environment Variables
# Copy this file to .env.local and fill in values
# ===============================================

# === Thirdweb Configuration (Required for wallet/minting) ===
THIRDWEB_CLIENT_ID=
THIRDWEB_SECRET_KEY=
NEXT_PUBLIC_THIRDWEB_CLIENT=

# === Azure OpenAI (Required for UMA Chatbot) ===
AZURE_OPENAI_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# === Alchemy API (Required for NFT data) ===
ALCHEMY_API_KEY=

# === BaseScan/Etherscan API (Required for transaction history, Diamond viewer) ===
EXPLORER_API_KEY=
NEXT_PUBLIC_EXPLORER_API_KEY=

# === Reservoir API (Optional - currently replaced by Alchemy) ===
RESERVOIR_API_KEY=
NEXT_PUBLIC_RESERVOIR_API_KEY=

# === Contract Addresses ===
NEXT_PUBLIC_MINT_CONTRACT=
DIAMOND_ADDRESS=
DIRECTORY_FACET=
DIRECTORY_FACET_ADDRESS=
NEXT_PUBLIC_DIRECTORY_FACET=
NEXT_PUBLIC_DIRECTORY_FACET_ADDRESS=

# === Mint Configuration ===
NEXT_PUBLIC_MINT_SOON=false
MINT_SOON=false

# === Google Cloud (Optional - for image uploads) ===
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_KEY_FILE=
GOOGLE_CLOUD_CREDENTIALS=
